---
import MainLayout from '../../layouts/MainLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const posts = [
  {
    slug: 'first-post',
    title: 'First Blog Post',
    date: '2024-03-20',
    excerpt: 'A brief excerpt from the first blog post...'
  },
  // Add more posts here
];
---

<MainLayout title="Blog">
  <Header slot="header" />
  
  <section class="blog">
    <h1>Blog</h1>
    <div class="posts">
      {posts.map((post) => (
        <article class="post-card">
          <h2>
            <a href={`/blog/${post.slug}`}>{post.title}</a>
          </h2>
          <time datetime={post.date}>
            {new Date(post.date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <p>{post.excerpt}</p>
          <a href={`/blog/${post.slug}`} class="read-more">Read More</a>
        </article>
      ))}
    </div>
  </section>

  <Footer slot="footer" />
</MainLayout>

<style>
  .blog {
    padding: 2rem 0;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .posts {
    display: grid;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .post-card {
    padding: 1.5rem;
    border: 1px solid #eaeaea;
    border-radius: 8px;
  }

  h2 a {
    color: #000;
    text-decoration: none;
  }

  h2 a:hover {
    text-decoration: underline;
  }

  time {
    color: #666;
    display: block;
    margin: 0.5rem 0;
  }

  .read-more {
    display: inline-block;
    margin-top: 1rem;
    color: #000;
    text-decoration: none;
    font-weight: 500;
  }

  .read-more:hover {
    text-decoration: underline;
  }
</style> 