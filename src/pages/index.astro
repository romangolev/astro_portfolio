---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<MainLayout title="Home">
  <Header slot="header" />
  
  <section class="hero">
    <h1>Developer & Technology Enthusiast</h1>
    <p>Building digital experiences with modern web technologies.</p>
  </section>

  <section class="featured">
    <div class="grid">
      <div class="featured-item">
        <h2>Development</h2>
        <p>Creating efficient and scalable solutions for web applications.</p>
      </div>
      <div class="featured-item">
        <h2>Technologies</h2>
        <p>Working with modern frameworks and tools to build better experiences.</p>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</MainLayout>

<style>
  .about {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  h2 {
    font-size: 1.8rem;
    margin: 2rem 0 1rem;
  }

  .content {
    line-height: 1.6;
  }

  ul {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }
</style> 