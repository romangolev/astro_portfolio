---
import MainLayout from '../../layouts/MainLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  // You can fetch your projects from a data source or markdown files
  const projects = [
    {
      slug: 'project-1',
      title: 'Project 1',
      description: 'Description of project 1',
      technologies: ['React', 'Node.js'],
      github: 'https://github.com/username/project-1'
    },
    // Add more projects here
  ];

  return projects.map((project) => {
    return {
      params: { slug: project.slug },
      props: { project }
    };
  });
}

const { project } = Astro.props;
---

<MainLayout title={project.title}>
  <Header slot="header" />
  
  <article class="project">
    <h1>{project.title}</h1>
    <p>{project.description}</p>
    
    <h2>Technologies Used</h2>
    <ul>
      {project.technologies.map((tech) => <li>{tech}</li>)}
    </ul>
    
    <a href={project.github} target="_blank" rel="noopener noreferrer">View on GitHub</a>
  </article>

  <Footer slot="footer" />
</MainLayout>

<style>
  .project {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 1.8rem;
    margin: 2rem 0 1rem;
  }

  ul {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  a {
    display: inline-block;
    margin-top: 2rem;
    padding: 0.5rem 1rem;
    background-color: #000;
    color: white;
    text-decoration: none;
    border-radius: 4px;
  }

  a:hover {
    background-color: #333;
  }
</style> 