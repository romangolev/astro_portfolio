---
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: "GitHub",
    url: "https://github.com/romangolev",
    icon: "github"
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/romangolev/",
    icon: "linkedin"
  }
];
---

<footer>
  <div class="footer-content">
    <div class="copyright">
      Â© {currentYear} Roman Golev. All rights reserved.
    </div>
    <div class="social-links">
      {
        socialLinks.map((link) => (
          <a 
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.name}
          >
            {link.name}
          </a>
        ))
      }
    </div>
  </div>
</footer>

<style>
  footer {
    margin-top: 4rem;
    padding: 2rem 0;
    border-top: 1px solid #eaeaea;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright {
    color: #666;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
  }

  .social-links a {
    color: #666;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .social-links a:hover {
    color: #000;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style> 