---
const { project } = Astro.props;
---

<article class="project-card border border-gray-300 p-4 mb-4 rounded-lg bg-white dark:bg-gray-800">
  <h2 class="text-xl font-semibold text-gray-900 dark:text-white">{project.title}</h2>
  <p class="text-gray-700 dark:text-gray-300">{project.description}</p>
  <div class="technologies mb-4">
    {project.technologies.map((tech: string) => (
      <span class="tech-tag inline-block bg-blue-500 text-white px-2 py-1 rounded mr-2 text-sm">{tech}</span>
    ))}
  </div>
  <a href={`/projects/${project.slug}`} class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-600 font-bold">View Project</a>
</article>

<style>
  .projects {
    padding: 2rem 0;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .project-card {
    padding: 1.5rem;
    border: 1px solid #eaeaea;
    border-radius: 8px;
    transition: transform 0.2s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
  }

  .technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 1rem 0;
  }

  .tech-tag {
    display: inline-block;
    background-color: var(--color-bg-tag, #ababab); /* Default to blue */
    color: var(--color-text-tag, #ffffff); /* Default to white */
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    margin-right: 0.5rem;
    font-size: 0.875rem;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  :global(.dark) .tech-tag {
    background-color: var(--color-bg-tag-dark, #515151); /* Darker blue for dark mode */
    color: var(--color-text-tag-dark, #e0e0e0); /* Light gray for dark mode */
  }

  a {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: #000;
    color: white;
    text-decoration: none;
    border-radius: 4px;
  }

  a:hover {
    background-color: #333;
  }

</style> 